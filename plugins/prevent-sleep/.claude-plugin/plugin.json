{
  "name": "prevent-sleep",
  "version": "1.0.0",
  "description": "Prevent Mac from sleeping during Claude Code sessions using caffeinate hooks.",
  "author": {
    "name": "leetwito"
  },
  "license": "MIT",
  "hooks": {
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "$CLAUDE_PLUGIN_DIR/hooks/prevent-sleep.sh"
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "$CLAUDE_PLUGIN_DIR/hooks/allow-sleep.sh"
      }
    ]
  }
}
